<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/inloggenButton"
        android:layout_width="109dp"
        android:layout_height="33dp"
        android:text="INLOGGEN"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="454dp" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:ems="10"
        android:hint="EMAIL ADRES"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textWachtwoord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textWachtwoord"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:ems="10"
        android:hint="WACHTWOORD"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="347dp" />

    <Button
        android:id="@+id/registrerenButton"
        android:layout_width="109dp"
        android:layout_height="33dp"
        android:text="REGISTREREN"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="454dp" />

    <TextView
        android:id="@+id/wachtwoordVergetenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WACHTWOORD VERGETEN"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.679" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="271dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="141dp"
        android:layout_height="98dp"
        app:layout_constraintBottom_toTopOf="@+id/textEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46"
        app:srcCompat="@android:drawable/btn_radio" />

</androidx.constraintlayout.widget.ConstraintLayout>