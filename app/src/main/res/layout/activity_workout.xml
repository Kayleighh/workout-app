<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutActivity">

    <TextView
        android:id="@+id/txtMaand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Maart"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleWorkout"
        app:layout_constraintStart_toStartOf="@+id/txtTitleWorkout"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleWorkout" />

    <TextView
        android:id="@+id/txtTitleWorkout"
        android:layout_width="82dp"
        android:layout_height="36dp"
        android:text="WEKELIJKSE WORK-OUT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <Button
        android:id="@+id/btnStartWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="START"
        app:layout_constraintEnd_toEndOf="@+id/txtMaand"
        app:layout_constraintStart_toStartOf="@+id/txtMaand"
        app:layout_constraintTop_toBottomOf="@+id/txtMaand" />
</androidx.constraintlayout.widget.ConstraintLayout>