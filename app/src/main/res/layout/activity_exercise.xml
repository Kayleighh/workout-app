<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F1"
    tools:context=".ExerciseActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout4"
        android:layout_width="296dp"
        android:layout_height="439dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/restRectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_rest"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="21dp"
            android:text="RUST"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/orange_devider_long"
            android:layout_width="239dp"
            android:layout_height="1dp"
            android:background="@drawable/orange_divider_long"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rust" />

        <ProgressBar
            android:id="@+id/repProgress"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/custom_progress"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orange_devider_long" />

        <TextView
            android:id="@+id/textRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="10"
            android:textColor="#4C4D4C"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/repProgress"
            app:layout_constraintLeft_toLeftOf="@+id/repProgress"
            app:layout_constraintRight_toRightOf="@+id/repProgress"
            app:layout_constraintTop_toTopOf="@+id/repProgress" />

        <View
            android:id="@+id/rectangle_close_grey"
            android:layout_width="108dp"
            android:layout_height="21dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_close_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/repProgress" />

        <TextView
            android:id="@+id/closeRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="SLUIT"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_close_grey"
            app:layout_constraintLeft_toLeftOf="@+id/rectangle_close_grey"
            app:layout_constraintRight_toRightOf="@+id/rectangle_close_grey"
            app:layout_constraintTop_toTopOf="@+id/rectangle_close_grey" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <VideoView
            android:id="@+id/videoView2"
            android:layout_width="346dp"
            android:layout_height="194dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout3"
        android:layout_width="259dp"
        android:layout_height="500dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConstraintLayout2">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textSize="21sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/textView28"
            android:layout_width="2dp"
            android:layout_height="53dp"
            android:background="@drawable/orange_divider"
            android:elevation="10dp"
            android:layout_marginStart="100dp"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="10"
            android:textSize="24sp"
            android:layout_marginStart="17dp"
            app:layout_constraintLeft_toRightOf="@+id/textView28"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textColor="#616161"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintLeft_toRightOf="@+id/textView28"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="260dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Description"
            android:textColor="#616161"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="261dp"
            android:layout_height="61dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="TIP:"
            android:textColor="#616161"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#2980B9"
            android:fontFamily="@font/montserrat_bold"
            android:text="MOEITE MET DE OEFENING?"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:backgroundTint="#C4C4C4"
            android:fontFamily="@font/montserrat_bold"
            android:text="STOP"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:backgroundTint="#2980B9"
            android:fontFamily="@font/montserrat_bold"
            android:text="PAUZE"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>

        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#DF6037"
            android:fontFamily="@font/montserrat_bold"
            android:text="DONE!"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnDone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <View
                android:id="@+id/ellipse_28"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ellipse_25" />

            <View
                android:id="@+id/ellipse_29"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ellipse_25"
                android:layout_marginStart="20dp"/>

            <View
                android:id="@+id/ellipse_25"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ellipse_25"
                android:layout_marginStart="20dp"/>

            <View
                android:id="@+id/ellipse_27"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ellipse_25"
                android:layout_marginStart="20dp"/>

            <View
                android:id="@+id/ellipse_26"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ellipse_25"
                android:layout_marginStart="20dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>